<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Fontawesome -->
    <script
      src="https://kit.fontawesome.com/42a182743f.js"
      crossorigin="anonymous"
    ></script>
    <!-- CSS -->
    <link rel="stylesheet" href="/css/form.css" />
    <title>Comment Update</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>
  <body>
    <!-- nav -->
    <%-include('../partials/navbar.ejs') %>

    <div class="form-container">
      <!-- icon -->
      <h1>Update Comment</h1>
      <p>
        <!-- lock icon -->
        <i class="fa fa-lock fas"></i>
      </p>
      <%if(error){%>
      <small class="error">
        <i class="fa fa-exclamation-circle fas"></i>
        <%=error%>
      </small>
      <%}%>
      <form
        action="/api/v1/comments/<%=comment?._id%>?_method=PUT&postId=<%=comment.post%>"
        method="POST"
      >
        <label for="password">message</label>
        <input value="<%=comment?.message%> " type="text" name="message" />

        <button type="submit">Update Comment</button>
      </form>
    </div>
    <!-- footer -->
    <%-include('../partials/footer.ejs') %>
  </body>
</html>
